<h1>Listing smartphones</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Marque</th>
      <th>Modele</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @smartphones.each do |smartphone| %>
      <tr>
        <td><%= image_tag smartphone.image.url(:medium) %></td>
        <td><%= smartphone.marque %></td>
        <td><%= smartphone.modele %></td>
        <td><%= link_to 'Show', smartphone %></td>
        <td><%= link_to 'Edit', edit_smartphone_path(smartphone) %></td>
        <td><%= link_to 'Destroy', smartphone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Smartphone', new_smartphone_path %>
