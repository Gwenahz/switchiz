<!-- Header -->
<header id="" class="header-landing">
    <div class="container text-center">
    	<div class="container text-center">
    		<%= image_tag "logo.png", :class => "logo-prelaunch", :size => "175x123" %>
		</div>
    	<div class="header-landing-text">
    		<% if @n.blank? %>
    			<% if @inv.blank? %>
    				<h1 class="header-first-text">L'aventure Switchiz commence bientôt</h1>
    			<% else %>
                    <% if @comment.blank? %>
                        <h1 class="header-first-text">L'aventure Switchiz commence bientôt</h1>
                    <% else %>
    				    <h1 class="header-first-text"><%= @comment %> t'invite à découvrir Switchiz</h1>
                    <% end %>
    			<% end %>
    		<% else %>
    			<h1 class="header-first-text">Hello <%= @n %></h1>
    		<% end %>
    		
            <h2 class="header-next-text">L'entretien de smartphone, réinventé !</h2>
    	</div>
	</div>
</header>

<section class="section-landing">
	<h3><i class="fa fa-lock fa-1x" aria-hidden="true"></i><br>Rejoins le club qui va chouchouter ton smartphone ;) <br> Fais partie des premiers au courant ! </h3>
    <% if @cookee.blank? %>
        <%= render 'form' %>
    <% else %>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <%= link_to "Voir mes amis inscrits", friends_path(:code => @cookee), :class => "btn btn-primary" %><br>
        </div>
        <div  class="col-md-4"></div>
    <% end %>
	

	<div class="col-md-12 text-center prelaunch-footer">
		<p><a href="mailto:gwenael@switchiz.co">gwenael@switchiz.co</a></p>
	</div>
</section>

<%= render 'modalone' %>
<script type="text/javascript">
	
	mixpanel.track("Prelaunch homepage");

	function addEvent(obj, evt, fn) {
    if (obj.addEventListener) {
        obj.addEventListener(evt, fn, false);
    }
    else if (obj.attachEvent) {
        obj.attachEvent("on" + evt, fn);
    }
}

addEvent(document, 'mouseout', function(evt) {
    if (evt.toElement == null && evt.relatedTarget == null) {
        $('#myModal').modal('show');
    }
});

</script>